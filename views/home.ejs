
<%- include("partials/header"); -%>

    <h1>Home</h1>
    <p> <%= startingContent %> </p>


  <%  posts.forEach(function(post){ %>

    <h1><%=post.title%></h1>
    <p>
    <%=post.content.substring(0, 100) + " ..."%>
    <a href="/posts/<%=post._id%>">Read More</a>
    <form action="/<%=post._id%>" method="POST">
      <button  class="btn btn-primary del" type="submit" name="button">Delete Post</button>
    </form>
    
    </p>


    <% }) %>
    <a href="/compose" class="btn btn-primary" style="margin-top: 30px;" type="submit" name="button">Add a Post</a>


<%- include("partials/footer"); -%>
